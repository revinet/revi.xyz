{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":gitSignOff"],
  "assignAutomerge": true,
  "assignees": ["revi"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["clsx", "docusaurus", "prism", "react", "remark"],
      "matchPackagePatterns": ["^@docusaurus/", "^@mdx-js"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "internalChecksFilter": "strict",
      "groupName": "docusaurus"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackagePatterns": ["^@fontsource/", "^@ibm/"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "internalChecksFilter": "strict",
      "groupName": "webFonts"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "buildkite-test-collector",
        "csslint",
        "eslint",
        "globals",
        "jshint",
        "prettier",
        "renovate",
        "turbo",
        "typescript",
        "wrangler"
      ],
      "matchPackagePatterns": [
        "^@eslint/",
        "^@lhci/",
        "^@playwright/",
        "^@remy/",
        "^@types/"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "internalChecksFilter": "strict",
      "schedule": ["* */4 * * *"],
      "timezone": "Asia/Seoul",
      "groupName": "linters"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackagePatterns": ["^@revi/"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "1 hour",
      "schedule": ["* */4 * * *"],
      "timezone": "Asia/Seoul",
      "groupName": "internal-deps"
    },
    {
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "internalChecksFilter": "strict",
      "schedule": ["* */4 * * *"],
      "timezone": "Asia/Seoul",
      "groupName": "npm patch upgrades"
    },
    {
      "matchDatasources": ["github-actions"],
      "automerge": true,
      "platformAutomerge": true,
      "schedule": ["* */4 * * *"],
      "timezone": "Asia/Seoul",
      "groupName": "github actions workflows upgrades"
    }
  ]
}
