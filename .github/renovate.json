{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":gitSignOff",
    ":pinSkipCi",
    ":prConcurrentLimit20",
    ":prHourlyLimit4",
    ":semanticCommits",
    ":semanticCommitTypeAll(CI)",
    ":separateMajorReleases",
    ":timezone(Asia/Seoul)"
  ],
  "assignAutomerge": true,
  "automerge": true,
  "platformAutomerge": true,
  "azure-pipelines": {
    "enabled": true
  },
  "assignees": ["revi"],
  "git-submodules": {
    "enabled": true,
    "versioning": "git"
  },
  "internalChecksFilter": "strict",
  "labels": ["dependencies"],
  "npmrcMerge": true,
  "osvVulnerabilityAlerts": true,
  "platformCommit": "enabled",
  "postUpdateOptions": ["npmDedupe"],
  "prBodyColumns": [
    "Package",
    "Type",
    "Change",
    "Pending",
    "Age",
    "Adoption",
    "Passing",
    "Confidence"
  ],
  "schedule": ["* */4 * * *"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "/^@docusaurus//",
        "/^docusaurus-/",
        "/^@mdx-js//",
        "/^prism-/",
        "/^react-/",
        "/^remark-/",
        "clsx",
        "react"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "prPriority": 8,
      "addLabels": ["javascript"],
      "groupName": "docusaurus"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["/^@fontsource//", "/^@ibm//"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "prPriority": 8,
      "addLabels": ["javascript"],
      "groupName": "webFonts"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "/^@eslint//",
        "/^eslint-/",
        "/^@lhci//",
        "/^@playwright//",
        "/^@remy//",
        "/^stylelint-/",
        "/^@types//",
        "buildkite-test-collector",
        "csslint",
        "eslint",
        "globals",
        "html-validate",
        "jshint",
        "prettier",
        "stylelint",
        "turbo",
        "typescript",
        "wrangler"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "schedule": ["* */4 * * *"],
      "timezone": "Asia/Seoul",
      "addLabels": ["javascript"],
      "groupName": "linters"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["renovate"],
      "schedule": ["before 6am every 3 day"],
      "minimumReleaseAge": "3 days",
      "addLabels": ["javascript"],
      "groupName": "update renovate every 3 days",
      "description": "Renovate releases too often.",
      "groupSlug": "weekly-update-renovate"
    },
    {
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "schedule": ["* */4 * * *"],
      "timezone": "Asia/Seoul",
      "addLabels": ["javascript"],
      "groupName": "npm patch upgrades"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["/^@revi//"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "1 hour",
      "schedule": ["* */4 * * *"],
      "timezone": "Asia/Seoul",
      "addLabels": ["javascript"],
      "prPriority": 9,
      "description": "Internal dependencies are trusted not to unpublish.",
      "groupName": "internal packages",
      "groupSlug": "internal-deps"
    },
    {
      "matchDatasources": ["github-actions"],
      "automerge": true,
      "platformAutomerge": true,
      "schedule": ["* */4 * * *"],
      "timezone": "Asia/Seoul",
      "addLabels": ["github_actions"],
      "groupName": "github actions workflows upgrades"
    },
    {
      "matchSourceUrls": ["https://github.com{/,}**"],
      "prBodyDefinitions": {
        "OpenSSF": "[![OpenSSF Scorecard](https://api.securityscorecards.dev/projects/github.com/{{sourceRepo}}/badge)](https://securityscorecards.dev/viewer/?uri=github.com/{{sourceRepo}})",
        "Repo": "{{sourceRepo}}"
      },
      "prBodyColumns": [
        "Package",
        "Type",
        "Change",
        "Pending",
        "Age",
        "Adoption",
        "Passing",
        "Confidence",
        "Repo",
        "OpenSSF"
      ]
    }
  ]
}
