{
  "exclude": [
    "(^docusaurus/build/)",
    "(^node_modules/)",
    "(^package-lock.json$)"
  ],
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "css": {
      "type": "csslint",
      "include": [
        "(\\.css$)"
      ]
    },
    "Generated": {
      "type": "generated"
    },
    "jshint": {
      "type": "jshint",
      "include": [
        "(\\.cjs$)",
        "(\\.js$)",
        "(\\.mjs$)"
      ]
    },
    "json": {
      "type": "json",
      "include": [
        "(^.arcconfig$)",
        "(^.arclint$)",
        "(^.arcunit$)",
        "(\\.imgbotconfig$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "spelling": {
      "type": "spelling"
    },
    "text": {
      "type": "text",
      "exclude": [
        "(^.gitignore$)",
        "(\\.md$)",
        "(\\.mdx$)"
      ],
      "text.max-line-length": 80,
      "severity": {
        "1": "autofix",
        "2": "advice",
        "3": "advice",
        "5": "disabled"
      }
    },
    "text-no-linelength": {
      "type": "text",
      "include": [
        "(^.gitignore$)",
        "(\\.md$)",
        "(\\.mdx$)"
      ],
      "severity": {
        "1": "autofix",
        "2": "advice",
        "3": "disabled",
        "5": "disabled"
      }
    }
  }
}
