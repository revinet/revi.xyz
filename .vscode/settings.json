{
  "[azure-pipelines]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.autoSave": "afterDelay",
  "files.associations": {
    "^.arc*": "json",
    "^.azure-pipeline/**.(yaml|yml)": "azure-pipelines",
    "^CODEOWNERS": "codeowners",
    "^.imgbotconfig": "json",
    "*.mdx": "markdown"
  },
  "markdownlint.lintWorkspaceGlobs": [
    "**/*.{md,mkd,mdwn,mdown,markdown,markdn,mdtxt,mdtext,mdx,workbook}",
    "!**/bower_components",
    "!**/node_modules",
    "!**/vendor",
    "!**/.git"
  ]
}
